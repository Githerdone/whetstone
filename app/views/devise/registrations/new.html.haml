#signup
	.form
		%h2 Sign up
		= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical', data: { validate: "parsley", novalidate: "" } }) do |f|
			.fields
				= f.label :name
				= f.text_field :name, autofocus: true, data: { trigger: 'change', required: 'true' }
				= f.label :email
				= f.email_field :email, :required => true, data: { trigger: 'change' }
				= f.label :password
				= f.password_field :password, :required => true, id: 'pc'
				= f.label :password_confirmation
				= f.password_field :password_confirmation, required: true, data: { trigger: 'change', equalto: '#pc'}
			.submit_button
				= f.submit 'Sign up', class: 'btn btn-primary ab'
		= render "devise/shared/links"
