.discussion.votable
  .column1
    = link_to "<i class='icon-thumbs-up'></i>".html_safe, discussion_votes_path(discussion), class: 'vote',data: {id: discussion.id, class_name: 'Discussion', value: 1}
    %h3.vote-count.vote_tally= "#{discussion.vote_tally}"
    = link_to "<i class='icon-thumbs-down'></i>".html_safe, discussion_votes_path(discussion), class: 'vote', data: {id: discussion.id, class_name: 'Discussion', value: -1}
  .column2
    .title= link_to discussion.title, stone_discussion_path(@stone,discussion), remote: true, class: "show_discussion"
    %p= discussion.content
    .comments
      - Comment.where("commentable_id=?", discussion.id)[0..2].each do |comment|
        .comment
          %p.content= comment.content
          %p.user= User.where("id=?", comment.user_id).first.name
